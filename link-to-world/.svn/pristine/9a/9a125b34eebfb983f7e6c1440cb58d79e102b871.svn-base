.validation-message {
    margin-left: 10px;
    font-weight: normal;
    margin-bottom: 0;
    line-height: 58px;
    vertical-align: top;
}

.radio input[type=radio], .checkbox input[type=checkbox] {
    margin: auto;
    opacity: 0;
    width: 0;
    height: 0;
}

.radio .radio-label, .checkbox .checkbox-label {
    position: relative;
    padding-left: 32px;
    line-height: 38px;
    vertical-align: top;
}

.checkbox, .radio, .radio + .radio, .checkbox + .checkbox {
    margin-top: 0;
    margin-bottom: 0;
    line-height: 36px;
}

.radio + .radio, .checkbox + .checkbox {
    margin-left: 10px;
}

.radio input[type=radio] + .radio-label:before, .checkbox input[type=checkbox] + .checkbox-label:before {
    content: "";
    position: absolute;
    top: 8px;
    left: 0;
    display: block;
    width: 22px;
    height: 22px;
    border: 1px solid #e4e4e4;
    background: #fff;
}

.radio input[type=radio][checked] + .radio-label:before, .checkbox input[type=checkbox][checked] + .checkbox-label:before {
    background: #fff url(/static/img/icon_right.png) center no-repeat;
    background-size: 14px;
}

.radio input[type=radio].green-radio + .radio-label:before, .checkbox input[type=checkbox].green-checkbox + .checkbox-label:before {
    background: #fff url(/static/img/icon_none_finish.png) center no-repeat;
    border: 0;
}

.radio input[type=radio].green-radio[checked] + .radio-label:before, .checkbox input[type=checkbox].green-checkbox[checked] + .checkbox-label:before {
    background: url(/static/img/icon_finish.png) center no-repeat;
}

.checkbox input[type=checkbox].green-square-checkbox + .checkbox-label:before {
    background: none;
    border: 2px solid #0d9da0;
    width: 24px;
    height: 24px;
    margin-top: 6px;
    margin-left: 6px;
}

.checkbox input[type=checkbox].green-square-checkbox[checked] + .checkbox-label:before {
    background: url(/static/img/icon_box.png) center no-repeat;
    border: 0;
}

.modal {
    text-align: center;
    padding: 0 !important;
}

.modal:before {
    content: '';
    display: inline-block;
    height: 100%;
    vertical-align: middle;
    margin-right: -4px;
}

.modal .modal-dialog {
    min-width: 322px;
    display: inline-block;
    vertical-align: middle;
}

.modal .modal-content {
    padding: 30px 35px;
    border: 0;
}

.modal .modal-body {
    padding: 20px 0;
}

.modal .modal-body p {
    margin: 0;
}

.modal .modal-content .modal-footer {
    border-top: 0;
    padding: 20px 0;
}

.modal .modal-content .modal-footer .btn {
    min-width: 115px;
    margin-left: 20px;
}

.modal .modal-content .modal-footer .btn:first-child {
    margin: 0;
}

input.form-control {
    box-shadow: none;
}

select.form-control {
    background: #fff url("/static/img/open_arrow.png") no-repeat center right 16px;
    padding: 0 30px 0 16px;
    box-shadow: none;
    height: 38px;
    line-height: 34px;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
}
