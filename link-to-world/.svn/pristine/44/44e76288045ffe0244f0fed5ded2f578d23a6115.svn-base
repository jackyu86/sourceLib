<md-toolbar md-theme="white" class="top">
    <div class="md-toolbar-tools">
        <h2 md-msg="user.role">Role</h2>

        <span flex></span>

        <md-button class="md-icon-button" aria-label="Create role" ui-sref="console.role.create">
            <md-icon class="fa-plus" md-font-icon="fa"></md-icon>
        </md-button>
    </div>
</md-toolbar>

<md-card flex layout="column">
    <md-table-container flex>
        <table md-table md-row-select="options.rowSelection" ng-model="selected" md-progress="promise">
            <thead md-head md-order="query.order">
            <tr md-row>
                <th md-column><span md-msg="user.name">Name</span></th>
                <th md-column><span md-msg="user.description">Description</span></th>
                <th md-column><span md-msg="user.createdTime">Created Time</span></th>
                <th md-column><span md-msg="user.updatedTime">Updated Time</span></th>
                <th md-column>
                    <span md-msg="user.action">Action</span>
                </th>
            </tr>
            </thead>
            <tbody md-body>
            <tr md-row md-select="user"
                ng-repeat="role in roles.items">
                <td md-cell>{{role.name}}</td>
                <td md-cell>{{role.description}}</td>
                <td md-cell>{{role.createdTime}}</td>
                <td md-cell>{{role.updatedTime}}</td>
                <td md-cell layout="row">
                    <md-button class="md-icon-button" ng-click="update(role)">
                        编辑
                    </md-button>
                    <md-button class="md-icon-button" ng-click="delete(role, $event)">
                        删除
                    </md-button>
                </td>
            </tr>
            </tbody>
        </table>
    </md-table-container>
    <md-table-pagination md-limit="query.limit" md-page="options.index()" md-total="{{options.total()}}"
                         md-page-select="options.pageSelector" md-boundary-links="options.boundaryLinks"
                         md-on-paginate="logPagination"></md-table-pagination>
</md-card>
