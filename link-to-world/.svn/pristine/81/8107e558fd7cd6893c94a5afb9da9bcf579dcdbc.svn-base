<html xmlns:j="http://www.w3.org/1999/xhtml">
<head>
</head>
<body>
<div class="page-header">
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    <img src="/static/img/logo_black.png" alt="">
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li j:for="category:categories" j:class="selected==category.id.toString()?'active':''">
                        <a j:href="'/search?category='+category.id" j:text="category.name">保险名称</a>
                    </li>
                    <li class="account-wrap" j:if="user == null">
                        <a class="account" href="/account/login">登录</a>
                        &nbsp;|&nbsp;
                        <a href="/account/register">注册</a>
                    </li>
                    <li class="account-wrap" j:if="user != null">
                        <a href="/account/info">
                            <span class="text-primary">Hi, </span>
                            <span class="text-primary" j:text="user.username"></span>
                        </a>
                        &nbsp;|&nbsp;
                        <a href="/account/logout">退出登录</a>

                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>
</body>
</html>
